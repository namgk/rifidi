<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!--  Create Reader Configuration Factory -->
	<bean id="snailConfigurationFactory"
		class="org.rifidi.edge.readerplugin.snail.SnailFactory">
		<property name="context" ref="bundleContext" />
		<property name="notifierService" ref="JMSNotifierService" />
		<property name="commandConfigurations" ref="snailCommands" />
	</bean>
	<!-- Create commands -->
	<bean id="snailCommandConfigurationFactory"
		class="org.rifidi.edge.readerplugin.snail.command.SnailCommandConfigurationFactory">
		<property name="context" ref="bundleContext" />
	</bean>
</beans>